{
  "name": "sqlvault-pro",
  "version": "1.0.2",
  "description": "SQL Server Inventory Management System",
  "main": "main.js",
  "author": "SQLVault Pro Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "build:backend": "cd ../backend && npm install --production",
    "build:electron": "electron-builder --win",
    "build:all": "npm run build:frontend && npm run build:backend && npm run build:electron",
    "dist": "electron-builder --win --publish never",
    "dist:dir": "electron-builder --win --dir"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.3"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "appId": "com.sqlvault.pro",
    "productName": "SQLVault Pro",
    "copyright": "Copyright Â© 2024 SQLVault Pro",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      },
      {
        "from": "../backend/node_modules",
        "to": "backend/node_modules"
      },
      {
        "from": "../frontend/build",
        "to": "frontend/build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SQLVault Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "../LICENSE",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
