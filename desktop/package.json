{
  "name": "sqlvault-pro",
  "version": "1.0.1",
  "description": "SQL Server Inventory Management System",
  "main": "main.js",
  "author": "SQLVault Pro Team",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "start:dev": "NODE_ENV=development electron .",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "dist": "electron-builder --win --publish never",
    "dist:dir": "electron-builder --win --dir"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^9.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mssql": "^10.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "icon-gen": "^5.0.0"
  },
  "build": {
    "appId": "com.sqlvault.pro",
    "productName": "SQLVault Pro",
    "copyright": "Copyright Â© 2024 SQLVault Pro",
    "asar": true,
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "main.js",
      "preload.js",
      "splash.html",
      "assets/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend/src",
        "to": "backend/src"
      },
      {
        "from": "../frontend/build",
        "to": "frontend/build"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "${productName}-${version}.${ext}",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "SQLVault Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "license": "../LICENSE",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    }
  }
}
