# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Secret (change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Encryption Key for SQL Server passwords (must be exactly 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(16).toString('hex'))"
ENCRYPTION_KEY=change-this-to-32-char-secret!!

# App Database (SQLite)
DB_PATH=./data/inventory.db

# Default Admin User (used when seeding)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=Admin@123

# SQL Server Connection Encryption (set to false for local dev without SSL)
MSSQL_ENCRYPT=false
MSSQL_TRUST_SERVER_CERTIFICATE=true
